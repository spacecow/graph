<%= form_for mention,
  url: mention.id ? article_mention_path(mention.id) : article_mentions_path,
  method: mention.id ? :put : :post do |f| %>
  <%= f.hidden_field :origin_id %>
  <div class="content">
    <%= f.label :content, "Comment" %>
    <%= f.text_field :content %>
  </div>
  <div class="mention">
    <%= f.label :target_id, "Mention" %>
    <%= f.collection_select :target_id, mentions, :id, :name, include_blank:true %>
  </div>
  <%= f.submit mention.id ? "Update" : "Create" %>
<% end %>
