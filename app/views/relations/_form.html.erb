<%= form_for relation do |f| %>
  <%= f.hidden_field :origin_id %>
  <div class="type">
<!-- relation type call -->
    <%= f.label :type, "Relation" %>
    <%= f.select :type, relation_types, include_blank:true %>
  </div>

<!-- target/origin class, not only target -->
  <div class="target">
    <%= f.label :target_id, "Relative" %>
    <%= f.text_field :target_id, data:{
      url:articles_path(
        format: :json,
        article_id:article_id,
        target_ids:target_ids.join('_'))} %>
  </div>
  <%= f.submit "Add" %>
<% end %>
