<% present @event do |presenter| %>

<div class="event">
  <h1><%= @event.title %></h1>

  <span class="parent"><%= presenter.parent %></span>

  <div class="participant list">
    <h2>Participants</h2>
    <ul class="participant"><%= render @event.participants %></ul>
  </div>
</div>

<div class="participation new form">
  <%= render "participations/form", participation:@participation, articles:@articles %>
</div>

<% end %>
