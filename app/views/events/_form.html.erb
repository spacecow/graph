<%= form_for event,
  url: event.id ? event_path(event.id) : events_path,
  method: event.id ? :put : :post do |f| %>
  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="parents">
    <%= f.label :parent_tokens, "Parents" %>
    <%= f.text_field :parent_tokens %>
  </div>
  <div class="children">
    <%= f.label :child_tokens, "Children" %>
    <%= f.text_field :child_tokens %>
  </div>
  <%= f.submit event.id ? "Update" : "Create" %>
<% end %>

