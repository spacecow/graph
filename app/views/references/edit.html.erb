<%= form_for @reference, url:reference_path(@reference.id), method: :put do |f| %>
  <%= f.hidden_field :referenceable_id %>
  <%= f.hidden_field :referenceable_type %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.submit "Update" %>
<% end %>

