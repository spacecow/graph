<ul class='references'>
  <% @references.each do |reference| %>
    <%= render reference %>
  <% end %>
</ul>

<%= form_for @reference do |f| %>
  <%= f.hidden_field :note_id %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.submit "Create" %>
<% end %>
