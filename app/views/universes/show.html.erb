<div class="universe">
  <h2><%= @universe.title %></h2>

<!-- list in categories, i.e. characters, items... -->
<!-- relations between articles -->
  <ul class='articles'>
    <% @articles.each do |article| %>
      <%= render article %>
    <% end %>
  </ul>

  <ul class='actions'>
    <li class='action new'><%= link_to 'New Article', new_article_path %></li>
  </ul>
</div>
